<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mil="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height50">

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ranger.xyg.music.views.MenuItemLayout
                android:id="@+id/mil_vip_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mil:nameText="@string/txt_upgrade_vip"
                mil:tipText="@string/txt_upgrade_vip_tip"/>

            <com.ranger.xyg.music.views.MenuItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mil:nameText="@string/txt_upgrade_vip"
                mil:tipText="@string/txt_upgrade_vip_tip"/>

            <com.ranger.xyg.music.views.MenuItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mil:nameText="@string/txt_upgrade_vip"
                mil:tipText="@string/txt_upgrade_vip_tip"/>

            <com.ranger.xyg.music.views.MenuItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                mil:nameText="@string/txt_upgrade_vip"
                mil:tipText="@string/txt_upgrade_vip_tip"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin20"
        android:layout_marginRight="@dimen/margin20"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height50"
        android:paddingLeft="@dimen/margin20"
        android:paddingRight="@dimen/margin20">

        <RelativeLayout
            android:id="@+id/rl_setting_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_setting_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@mipmap/more_feature_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_setting_menu"
                android:gravity="center"
                android:text="@string/txt_menu_setting"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_middle_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_close_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_close_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/more_feature_logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_close_menu"
                android:gravity="center"
                android:text="@string/txt_menu_close"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_middle_size" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>